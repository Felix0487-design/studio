
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow logged-in users to create their own vote, but not to update or delete.
    // Allow anyone to read the votes collection to see the count.
    match /votes/{userId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
  }
}
