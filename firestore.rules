rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /votes/{voteId} {
      // Allow anyone to read the votes (get, list)
      allow read: if true;
      // Allow only authenticated users to create their own vote document
      allow create: if request.auth != null;
      // Disallow updates and deletes
      allow update, delete: if false;
    }
  }
}
